# pnpm configuration
# Use shamefully-hoist to avoid issues with hoisted dependencies
shamefully-hoist=false

# Enable strict peer dependencies
strict-peer-dependencies=false

# Use node_modules linker (default, more compatible)
node-linker=hoisted

# Auto install peers
auto-install-peers=true

# Enable workspace protocol
enable-pre-post-scripts=true

# Use .npmrc files in workspaces
workspace-root=true
