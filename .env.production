# Production Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=${POSTGRES_HOST}
POSTGRES_PORT=5432
POSTGRES_DATABASE=${POSTGRES_DATABASE}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DATABASE}

CLICKHOUSE_HOST=${CLICKHOUSE_HOST}
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=${CLICKHOUSE_DATABASE}
CLICKHOUSE_USER=${CLICKHOUSE_USER}
CLICKHOUSE_PASSWORD=${CLICKHOUSE_PASSWORD}
CLICKHOUSE_URL=http://${CLICKHOUSE_HOST}:8123

REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://${REDIS_HOST}:6379

KAFKA_BROKERS=${KAFKA_BROKERS}
KAFKA_CLIENT_ID=hyperdash-prod

# Authentication (set these in your environment)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}
REFRESH_TOKEN_EXPIRES_IN=7d

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_CORS_ORIGINS=${CORS_ORIGINS}

# Web Application
WEB_PORT=3001
WEB_HOST=0.0.0.0
NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
NEXT_PUBLIC_WS_URL=${NEXT_PUBLIC_WS_URL}

# Data Ingestion
DATA_INGESTION_PORT=3003
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz/info
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
COLLECTION_INTERVAL_MS=1000
BATCH_SIZE=1000
BATCH_TIMEOUT_MS=5000

# Analytics
ANALYTICS_PORT=3004
ANALYTICS_CACHE_TTL=300

# Billing
BILLING_PORT=3005
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=billing@hyperdash.io

# Copy Engine
COPY_ENGINE_PORT=3006
COPY_ENGINE_HOST=0.0.0.0

# External Services
HYPERLIQUID_API_BASE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
BLOCKCHAIN_RPC_URL=${BLOCKCHAIN_RPC_URL}
COINGECKO_API_KEY=${COINGECKO_API_KEY}

# Production Settings
HOT_RELOAD=false
DEBUG_MODE=false
SEED_TEST_DATA=false
MOCK_EXTERNAL_APIS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=${CORS_ORIGIN}
CORS_CREDENTIALS=true

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=${SSL_CERT_PATH}
SSL_KEY_PATH=${SSL_KEY_PATH}

# Performance
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400000

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# Cluster Configuration
CLUSTER_MODE=true
CLUSTER_WORKERS=${CLUSTER_WORKERS}
