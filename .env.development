# Development Environment Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=hyperdash_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hyperdash_dev

CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=hyperdash_dev
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_URL=http://localhost:8123

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=hyperdash-dev

# Authentication
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-not-for-production
REFRESH_TOKEN_EXPIRES_IN=7d

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost
API_GATEWAY_CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Web Application
WEB_PORT=3001
WEB_HOST=localhost
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Data Ingestion
DATA_INGESTION_PORT=3003
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz/info
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
COLLECTION_INTERVAL_MS=1000
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000

# Analytics
ANALYTICS_PORT=3004
ANALYTICS_CACHE_TTL=300

# Billing
BILLING_PORT=3005
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Copy Engine
COPY_ENGINE_PORT=3006
COPY_ENGINE_HOST=localhost

# External Services
HYPERLIQUID_API_BASE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
COINGECKO_API_KEY=your-coingecko-api-key

# Development Settings
HOT_RELOAD=true
DEBUG_MODE=true
SEED_TEST_DATA=true
MOCK_EXTERNAL_APIS=false

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_FORMAT=dev
LOG_FILE_ENABLED=true
