{
  "name": "hyperdash-platform",
  "version": "1.0.0",
  "description": "A comprehensive data intelligence and copy trading platform for the Hyperliquid derivatives ecosystem",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun --filter web dev",
    "dev:all": "concurrently \"bun --filter api-gateway dev\" \"bun --filter web dev\"",
    "build": "bun run -r build",
    "start": "bun run -r start",
    "test": "bun run -r test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "bun run -r type-check",
    "clean": "bun run -r clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "bun --filter @hyperdash/database db:migrate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
