{
  "name": "hyperdash-platform",
  "version": "1.0.0",
  "description": "A comprehensive data intelligence and copy trading platform for the Hyperliquid derivatives ecosystem",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build --workspaces --if-present",
    "build:apps": "npm run build --workspaces --if-present --filter=apps/*",
    "dev": "concurrently \"npm run dev:api-gateway\" \"npm run dev:web\" \"npm run dev:data-ingestion\" \"npm run dev:analytics\" \"npm run dev:billing\"",
    "dev:api-gateway": "npm run dev --workspace=apps/api-gateway",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:data-ingestion": "npm run dev --workspace=apps/data-ingestion",
    "dev:analytics": "npm run dev --workspace=apps/analytics",
    "dev:billing": "npm run dev --workspace=apps/billing",
    "dev:copy-engine": "cd apps/copy-engine && go run cmd/server/main.go",
    "start": "npm run start:services",
    "start:services": "concurrently \"npm run start:api-gateway\" \"npm run start:web\" \"npm run start:data-ingestion\" \"npm run start:analytics\" \"npm run start:billing\"",
    "start:api-gateway": "npm run start --workspace=apps/api-gateway",
    "start:web": "npm run start --workspace=apps/web",
    "start:data-ingestion": "npm run start --workspace=apps/data-ingestion",
    "start:analytics": "npm run start --workspace=apps/analytics",
    "start:billing": "npm run start --workspace=apps/billing",
    "test": "npm run test:packages && npm run test:apps",
    "test:packages": "npm run test --workspaces --if-present",
    "test:apps": "npm run test --workspaces --if-present --filter=apps/*",
    "lint": "npm run lint:packages && npm run lint:apps",
    "lint:packages": "npm run lint --workspaces --if-present",
    "lint:apps": "npm run lint --workspaces --if-present --filter=apps/*",
    "lint:fix": "npm run lint:fix:packages && npm run lint:fix:apps",
    "lint:fix:packages": "npm run lint:fix --workspaces --if-present",
    "lint:fix:apps": "npm run lint:fix --workspaces --if-present --filter=apps/*",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check:packages && npm run type-check:apps",
    "type-check:packages": "npm run type-check --workspaces --if-present",
    "type-check:apps": "npm run type-check --workspaces --if-present --filter=apps/*",
    "clean": "npm run clean:packages && npm run clean:apps",
    "clean:packages": "npm run clean --workspaces --if-present",
    "clean:apps": "npm run clean --workspaces --if-present --filter=apps/*",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:seed": "npm run db:seed --workspace=packages/database",
    "setup": "./scripts/setup.sh",
    "start-dev": "./scripts/start-dev.sh"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.31.0",
    "prettier": "^2.8.4",
    "typescript": "^4.9.3",
    "workspace": "*"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
