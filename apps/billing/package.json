{
  "name": "@hyperdash/billing",
  "version": "1.0.0",
  "description": "Billing service for HyperDash platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rm -rf dist",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hyperdash/shared-types": "workspace:*",
    "@hyperdash/database": "workspace:*",
    "stripe": "^12.18.0",
    "redis": "^4.6.7",
    "winston": "^3.8.2",
    "dotenv": "^16.3.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/jest": "^29.5.0",
    "@types/stripe": "^8.0.417",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
